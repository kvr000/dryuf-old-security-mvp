<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
	<appenders>
		<console name="Console" target="SYSTEM_OUT">
			<patternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS}{UTC} [%-16t] %-5level [%logger{36}] - %msg%n"/>
		</console>
	</appenders>
	<loggers>
		<logger name="dryuf" level="DEBUG" />

		<logger name="org.springframework.context.support.ReloadableResourceBundleMessageSource" level="ERROR" />

		<logger name="org.hibernate.sql" level="FATAL" />
		<logger name="org.hibernate.hql" level="ERROR" />

		<root level="DEBUG">
			<appenderRef ref="Console" />
		</root>
	</loggers>
</configuration>
